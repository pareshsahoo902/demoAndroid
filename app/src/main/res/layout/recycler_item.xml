<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/moviewImage"
            android:src="@drawable/got"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/moviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/moviewImage"
            android:text="Game of Thrones"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/moviewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMDB 9.8/10"
            android:textSize="16dp"
            android:textColor="#B8740F"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/moviewName"
            android:layout_toRightOf="@id/moviewImage"
            />


        <TextView
            android:id="@+id/movieSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/moviewImage"
            android:layout_below="@+id/moviewRating"
            android:textSize="13dp"
            android:textColor="#858484"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Jetpack is a suite of libraries to help with app development and reduce boilerplate code. Using modern design practices, Jetpack libraries enable fewer crashes and memory leaks. "
            />

    </RelativeLayout>




</androidx.cardview.widget.CardView>